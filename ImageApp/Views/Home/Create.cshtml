@model Person
@{
    ViewData["Title"] = "Create";
}

<h1 class="bg-primary text-white text-center m-2 p-2">Create New Person</h1>

<form class="row" method="post" enctype="multipart/form-data">
    <div class="col-8 offset-1 shadow card p-3">
        <div class="my-3">
            <label class="form-label" asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ImgeUrl" class="form-label">Choose Image</label>
            <input type="file" name="files" multiple class="form-control" asp-for="ImgeUrl" />
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-outline-primary mb-2"><i class="fas fa-save fa-2x"></i> Save</button>
            <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-ban fa-2x"></i> Cancel</a>
        </div>
    </div>
</form>
