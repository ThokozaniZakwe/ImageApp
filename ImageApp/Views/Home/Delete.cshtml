@model Person
@{
    ViewData["Title"] = "Delete";
}

<h1 class="bg-danger text-center text-white">Are you sure you want to delete?</h1>

<form method="post" class="col-8">
    <div class="card offset-1 p-3 shadow">
        <div class="mb-3">
            <label class="form-label">ID</label>
            <input asp-for="Id" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" readonly class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="ImgeUrl"></label>
            <input type="file" readonly class="form-control" name="files" />
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-outline-danger mb-3"><i class="fas fa-trash-alt fa-2x"></i> Delete</button>
            <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-ban fa-2x"></i> Cancel</a>
        </div>
    </div>
</form>